{
  "name": "travel-ai-backend",
  "version": "1.0.0",
  "description": "Professional AI-powered travel itinerary and booking platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --watch src",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "db:seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "build": "npm install",
    "validate": "npm run lint && npm run test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}